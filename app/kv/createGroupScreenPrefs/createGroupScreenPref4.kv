<CreateGroupScreenPref4>
    name: "create_group_pref4"

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: 'Host Information'
            halign: "center"
            pos_hint: {"center_x":.5, "center_y": 0.8}
            underline: "true"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            spacing: 5

        MDLabel:
            text: 'First Name'
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            underline: "true"
            font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]
            spacing: 5

        MDTextField:
            hint_text: "Ex: Bob"
            mode: "rectangle"
            line_color_normal: "teal"
            multiline: True
            required: True

        MDLabel:
            text: 'Last Name'
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            underline: "true"
            font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]
            spacing: 5

        MDTextField:
            hint_text: "Ex: Smith"
            mode: "rectangle"
            line_color_normal: "teal"
            multiline: True
            required: True

        MDLabel:
            text: 'Email'
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            underline: "true"
            font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]
            spacing: 5

        MDTextField:
            hint_text: "Ex: bobsmith@gmail.com"
            mode: "rectangle"
            multiline: True
            line_color_normal: "teal"
            required: True

        MDLabel:
            text: 'Phone Number'
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            underline: "true"
            font_style: "H6"
            size_hint_y: None
            height: self.texture_size[1]
            spacing: 5

        MDTextField:
            hint_text: "Ex: XXX-XXX-XXXX"
            mode: "rectangle"
            line_color_normal: "teal"
            multiline: True
            required: True
            max_input_size: 12

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_x: 1
            padding: 0

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'

                MDFillRoundFlatIconButton:
                    text: "Prev Pref"
                    icon: "arrow-left"
                    on_release: root.class_parent.load_next_pref_page(2, "right")

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'

                MDFillRoundFlatIconButton:
                    text: "Next Pref"
                    icon: "arrow-right"
                    on_release: root.class_parent.load_next_pref_page(4)



