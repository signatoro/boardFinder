<CreateGroupScreenPref6>
    name: "create_group_pref6"

    ScrollView:
        size_hint: (1, 1)
        # height: dp(500)
        do_scroll_y: True
        bar_width: 10

        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height

            MDLabel:
                text: 'Add Tags'
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": 0.9}
                underline: "true"
                font_style: "H4"
                size_hint_y: None
                height: self.texture_size[1]
                spacing: 5

            # search tags text field
            MDTextField:
                id: search_tags
                # size_hint_y: 0.5
                pos_hint: {'left': 0, 'top': 0.9}
                size_hint_x: 0.8
                hint_text: 'Search Tag or Add Custom Tag'
                hint_text_color: 1,1,1,1
                icon_left: 'magnify'
                mode: "rectangle"
                line_color: [1,1,1,1]
                color_normal: [1,1,1,1]
                font_size: 22
                active_line: False
                multiline: False
                on_text: root.search_tags(self.text)

            MDBoxLayout:
                orientation: "vertical"
                size_hint: 1, None
                height: self.minimum_height

                MDScrollView:
                    size_hint: 1, None
                    height: tag_results.height
                    padding: dp(10)

                    MDList:
                        id: tag_results

                MDScrollView:
                    size_hint: 1, None
                    height: common_tags.height
                    padding: dp(10)
                    # size_hint: (1, 1)
                    # height: dp(500)
                    do_scroll_y: True
                    bar_width: 10

                    MDGridLayout:
                        cols: 2
                        id: common_tags
                        md_bg_color: (0.76, 0.74, 0.78, 1)
                        size_hint: (None, None)
                        size: (self.minimum_width, self.minimum_height)

    MDBoxLayout:
        orientation: "horizontal"
        size_hint_x: 1
        padding: 0

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'bottom'

            MDFillRoundFlatIconButton:
                text: "Prev Pref"
                icon: "arrow-left"
                on_release: root.class_parent.load_next_pref_page(4, "right")

        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'

            MDFillRoundFlatIconButton:
                text: "Next Pref"
                icon: "arrow-right"
                on_release: root.class_parent.load_next_pref_page(6)



