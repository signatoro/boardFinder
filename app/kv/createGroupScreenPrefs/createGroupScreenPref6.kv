<CreateGroupScreenPref6>
    name: "create_group_pref6"

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: 'Add Tags'
            halign: "center"
            pos_hint: {"center_x":.5, "center_y": 0.8}
            underline: "true"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            spacing: 5

        # search tags text field
        MDTextField:
            id: search_tags
            # size_hint_y: 0.5
            pos_hint:{ 'left':0 , 'top': 1}
            hint_text: 'Search Tag'
            hint_text_color: 1,1,1,1
            icon_left: 'magnify'
            mode: "fill"
            # helper_text_mode: "persistent"
            # helper_text: "Search Board Game"
            line_color: [1,1,1,1]
            color_normal: [1,1,1,1]
            font_size: 22
            active_line: False
            multiline: False
            on_text: root.search_tags(self.text)

        MDScrollView:
            MDList:
                size_hint: 0.2, 0.2
                id: tag_results

        MDScrollView:
            MDGridLayout:
                cols: 2
                id: common_tags
                md_bg_color: (0.76, 0.74, 0.78, 1)
                size_hint: 0.8, 0.8

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_x: 1
            spacing: 175

            MDFillRoundFlatIconButton:
                text: "Prev Pref"
                # width: self.width + dp(20)  # Adjust the width as needed
                pos_hint: {'center_x': 0.2}
                icon: "arrow-left"
                on_release: root.class_parent.load_next_pref_page(4, "right")

            MDFillRoundFlatIconButton:
                text: "Next Pref"
                # width: self.width + dp(20)  # Adjust the width as needed
                pos_hint: {'center_x': 0.8}
                icon: "arrow-right"
                on_release: root.class_parent.load_next_pref_page(6)



