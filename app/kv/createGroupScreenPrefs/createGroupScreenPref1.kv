<CreateGroupScreenPref1>
    name: "create_group_pref1"

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: 'Add your Board Game'
            halign: "center"
            pos_hint: {"center_x":.5, "top": 1}
            underline: "true"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]

        # search board game text field
        MDTextField:
            id: search_board_game
            pos_hint:{ 'center_x': 0.5 , 'top': 1}
            size_hint_x: 0.5
            hint_text: 'Search Board Game'
            hint_text_color: 1,1,1,1
            icon_left: 'magnify'
            mode: "rectangle"
            font_size: 22
            active_line: False
            multiline: False
            on_text: root.generate_search_game_options(self.text)
            on_focus: root.on_search_focus(self.focus)

        MDScrollView:
            MDList:
                id: list_item
                padding: [25, 0, 25, 0]
                height: self.minimum_height
                md_bg_color: "darkgrey"
                halign: "center"
                # width: list_item.ids.label.width  # Adjust width to the content + padding
                pos_hint: {"center_x": 0.5}
                id: game_results

        MDLabel:
            text: 'Added Board Games'
            halign: "center"
            underline: "true"
            font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]

        MDScrollView:
            MDList:
                padding: [25, 0, 25, 0]
                height: self.minimum_height
                md_bg_color: "darkgrey"
                id: selected_games

        MDFillRoundFlatIconButton:
            text: "Next Pref"
            # width: self.width + dp(20)  # Adjust the width as needed
            pos_hint: {'center_x': 0.8}
            icon: "arrow-right"
            on_release: root.class_parent.load_next_pref_page(1)














