<CreateGroupScreenPref5>
    name: "create_group_pref5"

    ScrollView:
        size_hint: (1, 1)
        # height: dp(500)
        do_scroll_y: True
        do_scroll_x: True
        # bar_width: dp(10)

        MDBoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            adaptive_height: True
            padding: [25, 10, 25, 10]
            # height: self.minimum_height

            MDLabel:
                text: 'Add Tags'
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": 0.9}
                underline: "true"
                font_style: "H4"
                size_hint_y: None
                height: self.texture_size[1]
                spacing: 5

            # search tags text field
            MDTextField:
                id: search_tags_field
                pos_hint:{ 'center_x': 0.5 , 'top': 1}
                size_hint_x: 0.8
                hint_text: 'Search Tag or Add Custom Tag'
                hint_text_color: 1,1,1,1
                icon_left: 'magnify'
                mode: "rectangle"
                font_size: 22
                active_line: False
                multiline: False
                on_text: root.search_tags(self.text)
                padding: [0, 0, dp(35), 0]

            MDBoxLayout:
                orientation: "vertical"
                size_hint: 1, None
                height: self.minimum_height

                MDScrollView:
                    do_scroll_y: True
                    do_scroll_x: False
                    bar_width: 10
                    size_hint: 1, None
                    height: tag_results.height

                    MDList:
                        id: tag_results

                MDScrollView:
                    size_hint: 1, None
                    do_scroll_y: True
                    bar_width: 10
                    height: common_tags.height

                    MDGridLayout:
                        id: common_tags
                        cols: 2
                        adaptive_height: True
                        adaptive_width: True
                        padding: [dp(25), dp(25), dp(25), dp(25)]
                        spacing: dp(4)
                        md_bg_color: (0.76, 0.74, 0.78, 1)

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                padding: 0

                AnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'bottom'
                    padding: [dp(5), 0, 0, dp(10)]

                    MDFillRoundFlatIconButton:
                        text: "Previous Preference"
                        icon: "arrow-left"
                        on_release: root.add_data_to_final(3, "right")

                AnchorLayout:
                    anchor_x: 'right'
                    anchor_y: 'bottom'
                    padding: [0, 0, dp(5), dp(10)]

                    MDFillRoundFlatIconButton:
                        text: "Next Preference"
                        icon: "arrow-right"
                        on_release: root.add_data_to_final(5)



