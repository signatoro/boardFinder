<CreateGroupScreenPref5>
    name: "create_group_pref5"

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: 'General Meeting Description'
            halign: "center"
            pos_hint: {"center_x":.5, "center_y": 0.8}
            underline: "true"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            spacing: 5

        MDTextField:
            hint_text: "Enter additional information: -rules to follow, -what to expect, -what to bring, -will food be served?"
            mode: "fill"
            multiline: True
            required: True
            text_size: self.width
            max_input_size: 1000
            height: self.minimum_height
            size_hint_y: dp(30)

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_x: 1
            spacing: 175

            MDFillRoundFlatIconButton:
                text: "Prev Pref"
                # width: self.width + dp(20)  # Adjust the width as needed
                pos_hint: {'center_x': 0.2}
                icon: "arrow-left"
                on_release: root.class_parent.load_next_pref_page(3, "right")

            MDFillRoundFlatIconButton:
                text: "Next Pref"
                # width: self.width + dp(20)  # Adjust the width as needed
                pos_hint: {'center_x': 0.8}
                icon: "arrow-right"
                on_release: root.class_parent.load_next_pref_page(5)




