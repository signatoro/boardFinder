

<LocalEventCard>:

    MDBoxLayout:
        radius: 25
        orientation: 'horizontal'
        # md_bg_color: "black"

        padding: [10,0,10,25]

        MDBoxLayout:
            size_hint_x: 0.35
            size_hint_y: 1
            md_bg_color: app.theme_cls.primary_color
            orientation: 'vertical'
            padding: [25,50,25,50]
            spacing: 100

            radius: 25

            # Calender
            MDBoxLayout:
                orientation: "vertical"
                padding: [20, 50, 20, 50]

                pos_hint: {"center_x":.5, "center_y": .8}

                size_hint_x: .5
                size_hint_y: .2
                # id: tag_table

                # Headers
                MDLabel:
                    
                    text: f"{root.get_month(root.month)}"
                    font_style: "H4"
                    halign: "center"
                    # text_align:'center'
                    # valign: "top"
                    # padding: [100, 0, 50, 0]
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1  # White text color
                    md_bg_color: [1, 0, 0, 1]  # Use the primary color as the outline color
                    size_hint_y: None
                    height: self.texture_size[1]  # Adjust the size based on text size
                    
                
                MDLabel:
                    text: f"{root.day}"
                    halign: "center"
                    font_style: "H4"
                    # padding: [100, 0, 50, 0]
                    md_bg_color: [1, 1, 1, 1]  # Use the primary color as the outline color
                

            # Time
            MDLabel:
                text: f"{root.time}"
                halign: "center"
                font_style: "H4"
                theme_text_color: "Custom"
                text_color: [1,1,1,1]
                # md_bg_color: [0.9,0.9,0.9,1]
                size_hint_y: None
                size_hint_x: 1
                height: self.texture_size[1] + 5
                # pos_hint: {"center_x": .8, "center_y": .5} 

            # Location Type    
            MDLabel:
                text: f"{root.location_type}"
                halign: "center"
                font_style: "H4"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                md_bg_color: [1,1,1,1]
                size_hint_y: None
                # padding: [20, 0, 0, 0]
                size_hint_x: .5
                height: self.texture_size[1] + 5
                pos_hint: {"center_x": .5, "center_y": .5} 
                radius: 25

            # Location
            MDLabel:
                text: f"{root.location}"
                halign: "center"
                size_hint_y: .2
                font_style: "H4"
                theme_text_color: "Custom"
                text_color: [1,1,1,1]
                # padding: [20, 0, 0, 0]
                # size_hint_y: None
                # size_hint_x: 1
                # height: self.texture_size[1] + 5
                # pos_hint: {"center_x": 0.5, "center_y": 1} 




        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: 0.65
            size_hint_y: 1

            md_bg_color: [.8,.9,.9,1]

            padding: [20, 20, 20, 20]

            # Title
            MDLabel:
                text: f"{root.title}"
                size_hint_y: None
                height: self.texture_size[1] + 5
                font_style: "H2"
                underline: True
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color

            # General Descriptions
            MDLabel:
                size_hint_y: .5
                text: f"asd;lfkjads l;fjasdl fasdl;kjf a;dslkjf ;laskdjf a;sldkjf ;alskdj ;alkdjf ;alsdkjf ;lasdkjf ;alskdfj ;alkjf ;alksjf ;alksjf a;lskdf j"
                theme_text_color: "Custom"
                font_style: "H4"
                text_color: app.theme_cls.primary_color
                pos_hint: {"center_x":0.5, "center_y": 0.8}
                padding: [10,0,10,50]

            
            # Learn More
            MDFillRoundFlatIconButton:
                text: "Learn more"
                font_style: "H3"
                size_hint: (.7, .1)
                pos_hint: {"center_x":0.5, "center_y": 0.5}
                # Adjust the size as needed
                # theme_text_color: "Custom"
                text_color: [1,1,1,1]  # Set text color to the primary color
                
                # Redirect to another website
                on_release: 