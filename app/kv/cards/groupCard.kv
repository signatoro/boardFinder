

<GroupCard>:

    MDBoxLayout:
        # radius: 25
        orientation: 'horizontal'
        md_bg_color: [.8,.9,.9,1]

        padding: [25,25,25,25]

        # Left Side
        MDBoxLayout:
            size_hint_x: 0.35
            size_hint_y: 1
            md_bg_color: app.theme_cls.primary_color
            orientation: 'vertical'
            padding: [5,50,5,50]
            spacing: 25

            radius: 25

            AsyncImage:
                source: root.image_path  
                size_hint: 1, .5
            
            MDLabel:
                text: f"{root.user_status}"
                halign: "center"
                font_style: "H4"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                md_bg_color: [1,1,1,1]
                # padding: [20, 0, 0, 0]
                size_hint_x: .5
                size_hint_y: None
                height: self.texture_size[1] + 5
                pos_hint: {"center_x": .5, "center_y": .5} 
                radius: 25

            MDLabel:
                text: f"{root.get_day_of_week(root.day)}, {root.time}"
                font_style: "H4"
                # text_size: self.size
                halign: "center"
                theme_text_color: "Custom"
                text_color: "white"
                size_hint_y: .2
                # height: self.texture_size[1] + 5
                

            MDLabel:
                text: f"{root.session_length}"
                font_style: "H4"
                # text_size: self.size
                halign: "center"
                theme_text_color: "Custom"
                text_color: "white"
                size_hint_y: .3
                # height: self.texture_size[1] + 5


            MDLabel:
                text: f"{root.participant}"
                font_style: "H4"
                # text_size: self.size
                halign: "center"
                theme_text_color: "Custom"
                text_color: "white"
                size_hint_y: .1
                # height: self.texture_size[1] + 5

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: 0.65
            size_hint_y: 1
            radius: 15

            md_bg_color: [.7,.8,.8,1]

            padding: [20, 20, 20, 20]

            # Title
            MDLabel:
                text: f"{root.title}"
                size_hint_y: None
                height: self.texture_size[1] + 5
                font_style: "H3"
                underline: True
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color

            # General Descriptions
            MDLabel:
                # size_hint_y: 1
                text: f"asd;lfkjads l;fjasdl fasdl;kjf a;dslkjf ;laskdjf a;sldkjf ;alskdj ;alkdjf ;alsdkjf ;lasdkjf ;alskdfj ;alkjf ;alksjf ;alksjf a;lskdf j"
                theme_text_color: "Custom"
                font_style: "H4"
                valign: 'top'
                text_size: self.size
                text_color: app.theme_cls.primary_color
                # pos_hint: {"center_x":0.5, "center_y": 0.8}
                padding: [15,20,15,10]

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: .3
                spacing: 15
                # Learn More
                MDFillRoundFlatIconButton:
                    text: "Go to Page"
                    text_size: self.size
                    font_style: "Body1"
                    size_hint: (.7, .5)
                    text_size: self.size
                    pos_hint: {"center_x":0.5, "center_y": 0.5}
                    # Adjust the size as needed
                    # theme_text_color: "Custom"
                    text_color: [1,1,1,1]  # Set text color to the primary color
                    
                    # Redirect to another website
                    on_release: # Redirect to page
                
                MDFillRoundFlatIconButton:
                    text: "Leave Group"
                    text_size: self.size
                    font_style: "Body1"
                    size_hint: (.7, .5)
                    text_size: self.size
                    pos_hint: {"center_x":0.5, "center_y": 0.5}
                    # Adjust the size as needed
                    # theme_text_color: "Custom"
                    text_color: [1,1,1,1]  # Set text color to the primary color
                    
                    # Redirect to another website
                    on_release: # Redirect to page