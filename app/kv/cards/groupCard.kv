

<GroupCard>:

    MDBoxLayout:
        # radius: 25
        orientation: 'horizontal'
        md_bg_color: [.8,.9,.9,1]

        padding: [25,25,25,25]

        # Left Side
        MDBoxLayout:
            size_hint_x: 0.35
            size_hint_y: 1
            md_bg_color: app.theme_cls.primary_color
            orientation: 'vertical'
            padding: [5,50,5,50]
            spacing: 25

            radius: 25

            AsyncImage:
                source: root.image_path  
                size_hint: 1, .75
            
            # Status
            MDBoxLayout:
                size_hint_x: .75
                pos_hint: {"center_x": .5, "center_y": .5} 

                # Location Type    
                MDLabel:
                    text: f"{root.user_status}"
                    halign: "center"
                    valign: "center"
                    size_hint: (.5, .4)
                    # font_style: "H4"
                    font_size: self.width/8
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
                    md_bg_color: [1,1,1,1]
                    # size_hint_y: None
                    # padding: [20, 0, 0, 0]
                    # size_hint_x: .5
                    text_size: self.size
                    # size_hint_y: None  # This allows you to set a fixed height
                    # height: max(self.texture_size[1], 50)  # Adjust the minimum height here
                    # pos_hint: {"center_x": .5, "center_y": .5} 
                    # radius: 25

            # Day and Time
            MDLabel:
                text: f"{root.get_day_of_week(root.day)}, {root.time}"
                font_size: self.width/10
                # text_size: self.size
                halign: "center"
                theme_text_color: "Custom"
                text_color: "white"
                size_hint_y: .2
                # height: self.texture_size[1] + 5
                
            # Sessions Length
            MDLabel:
                text: f"{root.session_length}"
                font_size: self.width/10
                # text_size: self.size
                halign: "center"
                theme_text_color: "Custom"
                text_color: "white"
                size_hint_y: .3
                # height: self.texture_size[1] + 5


            # Number of Participants
            MDLabel:
                text: f"{root.participant}"
                font_size: self.width/10
                # text_size: self.size
                halign: "center"
                theme_text_color: "Custom"
                text_color: "white"
                size_hint_y: .1
                # height: self.texture_size[1] + 5

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: 0.65
            size_hint_y: 1
            radius: 15

            md_bg_color: [.7,.8,.8,1]

            padding: [20, 20, 20, 20]

            # Title
            MDLabel:
                text: root.title
                size_hint_y: None
                height: self.texture_size[1] + 5
                font_size: self.width/10
                underline: True
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color

            # General Descriptions
            MDLabel:
                size_hint_y: 1
                text: root.description
                theme_text_color: "Custom"
                font_size: self.width/15
                text_size: self.size
                text_color: app.theme_cls.primary_color
                valign: 'top'
                text_color: app.theme_cls.primary_color
                pos_hint: {"center_x":0.5, "center_y": 0.8}
                padding: [15,20,15,10]

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: .3
                spacing: 15
                # Learn More
                MDFillRoundFlatIconButton:
                    text: "Go to Page"
                    text_size: self.size
                    font_style: "Body1"
                    size_hint: (.7, .5)
                    text_size: self.size
                    pos_hint: {"center_x":0.5, "center_y": 0.5}
                    # Adjust the size as needed
                    # theme_text_color: "Custom"
                    text_color: [1,1,1,1]  # Set text color to the primary color
                    
                    # Redirect to another website
                    on_release: # Redirect to page
                
                MDFillRoundFlatIconButton:
                    text: "Leave Group"
                    text_size: self.size
                    font_style: "Body1"
                    size_hint: (.7, .5)
                    text_size: self.size
                    pos_hint: {"center_x":0.5, "center_y": 0.5}
                    # Adjust the size as needed
                    # theme_text_color: "Custom"
                    text_color: [1,1,1,1]  # Set text color to the primary color
                    
                    # Redirect to another website
                    on_release: # Redirect to page