

<BoardGameScreen>:
    name: 'board_game_screen'

    MDBoxLayout:
        orientation: "vertical"
        spacing: 5

        MDTopAppBar:
            title: "BoardGameTopBar"
            left_action_items:
                [["home", lambda x: app.change_screen("home_screen", direction='right'), "Home", "Home"]]

        # Title and Backbutton
        MDBoxLayout:
            orientation: "horizontal"
            spacing: 50
            pos_hint:{'top': 1}
            size_hint_y: None
            set_height: 100
            padding: [0,0,50,0]
            
            # Title
            MDLabel:
                text: f"{root.title}"
                pos_hint: {"center_x":0, "center_y": 0.01}
                underline: "true"
                font_style: "H3"
                size_hint_y: None
                height: self.texture_size[1] + 5  # Set the height based on text size
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color

            MDFillRoundFlatIconButton:
                text: "Back"
                size_hint: (.2, .7)
                pos_hint: {"center_x":0, "center_y": 0.01}
                # Adjust the size as needed
                # theme_text_color: "Custom"
                text_color: [1,1,1,1]  # Set text color to the primary color
                
                on_release: app.change_screen('learn_game_screen', direction="right")

        #Video and General Description
        MDBoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: [50,50,0,50]

            VideoPlayer:
                id: video_player
                source: f"{root.tutorial_video_link}"  # Replace with the path to your video file
                allow_stretch: True

                state: "pause"  # You can set it to 'stop', 'pause', or 'play'
                options: {"eos": "loop"}  # 'eos': 'loop' will make the video loop
                # size_hint: (1, 1)  # Adjust the size as needed

        MDLabel:
            text: f"{root.general_description}"
            font_style: "H6"
            padding: [50,50, 0,50]
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            size_hint_y: None
            height: self.texture_size[1] # Set the height based on text size
        
        # Big Description
        MDLabel:
            text: f"{root.main_description}"
            font_style: "H6"
            padding: [50,0,10,50]
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            size_hint_y: None
            height: self.texture_size[1]  # Set the height based on text size
        
        #Links and Tags
        MDBoxLayout:
            orientation: "horizontal"
            spacing: 10
