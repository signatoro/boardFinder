#:include kv/findGroupScreenPrefs/findGroupScreenPref1.kv
#:include kv/findGroupScreenPrefs/findGroupScreenPref2.kv
#:include kv/findGroupScreenPrefs/findGroupScreenPref3.kv

<FindGroupScreen>:
    name: "find_group_screen"
    id: find_group_screen_parent
    on_pre_enter: root.screen_entered()

    MDBoxLayout:
        orientation: "vertical"
        #spacing: 10

        TopBar:
            id: topBar

        MDLabel:
            id: main_label
            size_hint_x: 1
            size_hint_y: 0.05
            text: 'Find a Group'
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            underline: "true"
            halign: "center"
            font_style: "H3"
            size_hint_y: None
            height: self.texture_size[1]

        MDBoxLayout:
            # Set up screen manager and all screens
            size_hint_x: 1
            size_hint_y: 0.85
            ScreenManager:
                size_hint: 1, 1
                #pos_hint: {"center_x": 0.5, "top": 0.9}
                id: find_group_screen_manager
