<CreateGroupScreenPref1>
    name: "create_group_pref1"

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: 'Add your Board Game'
            halign: "center"
            pos_hint: {"center_x":.5, "center_y": 0.8}
            underline: "true"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            spacing: 5

        # search board game text field
        MDTextField:
            id: search_board_game
            # size_hint_y: 0.5
            pos_hint:{ 'left':0 , 'top': 1}
            hint_text: 'Search Board Game'
            hint_text_color: 1,1,1,1
            icon_left: 'magnify'
            mode: "fill"
            # helper_text_mode: "persistent"
            # helper_text: "Search Board Game"
            line_color: [1,1,1,1]
            color_normal: [1,1,1,1]
            font_size: 22
            active_line: False
            multiline: False

        MDScrollView:
            MDList:
                id: game_results

        MDBoxLayout:
            orientation: "horizontal"

            MDFillRoundFlatIconButton:
                text: "Next Pref"
                pos_hint: {"right": 1, "y": 0.5}
                icon: "arrow-right"
                on_release: root.class_parent.load_next_pref_page(1)














