<HomeScreen>:
    name: "home_screen"
    id: home_screen

    MDBoxLayout:
        spacing: 10
        orientation: 'vertical'
        cols: 1

        MDTopAppBar:
            title: "BoardGameTopBar"
            pos_hint_y: None
            #left_action_items:
            #    [["home", lambda x: app.change_screen("home_screen", direction='right'), "Home", "?!?"]]
            right_action_items:
                [["account", lambda x: app.change_screen("create_account_screen", direction='left'), "Sign In", "???"]]

        # BoxLayout widget for central buttons
        MDBoxLayout:
            spacing: 10
            #padding: 10
            orientation: 'horizontal'
            size_hint: (1, 0.3)

            MDFillRoundFlatIconButton:
                size_hint: (1, 1)
                font_size: self.width/10
                text: 'Find a Group'
            MDFillRoundFlatIconButton:
                size_hint: (1, 1)
                font_size: self.width/10
                text: 'Learn a Game'
                on_release: app.change_screen("learn_game_screen")
            MDFillRoundFlatIconButton:
                size_hint: (1, 1)
                font_size: self.width/10
                text: 'Create a Group'
                on_release: app.change_screen("create_group_screen")

        MDTabs:
            lock_swiping: True
            anim_duration: 0
            #anim_threshold: 0
            #scroll_timeout: 0

            Tab:
                title: "Local Events"
                #lock_swiping: True
                #anim_duration: 0
                #anim_threshold: 0
                #scroll_timeout: 0
                MDCarousel:
                    #min_move: 0.0001
                    #anim_cancel_duration: 0.0001
                    #scroll_distance: 0.0001
                    MDCard:
                        max_swipe_x: 0
                        size_hint: (1, 1)
                        md_bg_color: "darkgrey"
                        MDLabel:
                            text: 'Local Event 1'
                            adaptive_size: True
                            pos_hint: {"x": 0.5, "y": 0.5}
                            color: (0, 0, 0, 1)
                            bold: True
                    MDCard:
                        max_swipe_x: 0
                        size_hint: (1, 1)
                        md_bg_color: "darkgrey"
                        MDLabel:
                            text: 'Local Event 2'
                            adaptive_size: True
                            pos_hint: {"x": 0.5, "y": 0.5}
                            color: (0, 0, 0, 1)
                            bold: True
                    MDCard:
                        max_swipe_x: 0
                        size_hint: (1, 1)
                        md_bg_color: "darkgrey"
                        MDLabel:
                            text: 'Local Event 3'
                            adaptive_size: True
                            pos_hint: {"x": 0.5, "y": 0.5}
                            color: (0, 0, 0, 1)
                            bold: True
                    MDCard:
                        max_swipe_x: 0
                        size_hint: (1, 1)
                        md_bg_color: "darkgrey"
                        MDLabel:
                            text: 'Local Event 4'
                            adaptive_size: True
                            pos_hint: {"x": 0.5, "y": 0.5}
                            color: (0, 0, 0, 1)
                            bold: True

            Tab:
                title: "My Groups"
                MDFillRoundFlatIconButton:
                    size_hint: (1, 1)
                    text: 'Group 1'
