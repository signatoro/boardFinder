#:include kv/createGroupScreenPrefs/createGroupScreenPref1.kv
#:include kv/createGroupScreenPrefs/createGroupScreenPref2.kv
#:include kv/createGroupScreenPrefs/createGroupScreenPref3.kv
#:include kv/createGroupScreenPrefs/createGroupScreenPref4.kv
#:include kv/createGroupScreenPrefs/createGroupScreenPref5.kv
#:include kv/createGroupScreenPrefs/createGroupScreenPref6.kv

<CreateGroupScreen>:
    name: "create_group_screen"
    id: create_group_screen_parent

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "BoardGameTopBar"
            pos_hint_y: None
            left_action_items:
                [["home", lambda x: app.change_screen("home_screen", direction='right'), "Home", "Home"]]

        MDLabel:
            text: 'Create a Group'
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            underline: "true"
            halign: "center"
            font_style: "H3"
            size_hint_y: None
            height: self.texture_size[1]

        MDBoxLayout:
            orientation: "vertical"
            # Set up screen manager and all screens
            ScreenManager:
                # size_hint: 1, 1
                # pos_hint: {"center_x": 0.5, "top": 0.9}
                id: create_group_screen_manager

            MDProgressBar:
                id: progress_bar
                min: 0
                max: 1
                value: root.display_progress_bar_value()
                size_hint_x: 1
                size_hint_y: None
                padding: [0, 100, 0, 0]

