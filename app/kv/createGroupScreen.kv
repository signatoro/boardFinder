#:include kv/createGroupScreenPref1.kv
#:include kv/createGroupScreenPref2.kv
#:include kv/createGroupScreenPref3.kv
#:include kv/createGroupScreenPref4.kv
#:include kv/createGroupScreenPref5.kv
#:include kv/createGroupScreenPref6.kv

<CreateGroupScreen>:
    name: "create_group_screen"
    id: create_group_screen_parent

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "BoardGameTopBar"
            left_action_items:
                [["home", lambda x: app.change_screen("home_screen", direction='right'), "Home", "Home"]]

        MDLabel:
            text: 'Create a Group'
            pos_hint: {"center_x":.5, "center_y": 0.9}
            underline: "true"
            halign: "center"
            font_style: "H3"
            size_hint_y: None
            height: self.texture_size[1]
            padding: 5

        FloatLayout:
            # Set up screen manager and all screens
            ScreenManager:
                size_hint: 1, 1
                pos_hint: {"top": 1, "left": 1}
                id: create_group_screen_manager

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "48dp"


            MDProgressBar:
                id: progress_bar
                min: 0
                max: 1
                value: root.display_progress_bar_value()
                size_hint_x: 0.5
                size_hint_y: None
                pos_hint: {"center_x": 0.5}

            MDLabel:
                id: progress_bar_value_label
                text: root.display_progress_bar_label()
                size_hint_x: 0.5

