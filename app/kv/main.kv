MDScreen:
    MDBoxLayout:
        orientation: "vertical"
        cols: 1
        size_hint: (1, 1)  # Disable automatic size_hint
        #width: 400#Window.size[0]  # ((Window.size[0] + Window.size[1]) / 2) * 2 * 2 / 5
        #height: 600#Window.size[1]  # ((Window.size[0] + Window.size[1]) / 2) * 2 * 3 / 5
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        FloatLayout:
            # Set up screen manager and all screens
            ScreenManager:
                size_hint: 1, 1
                pos_hint: {"top": 1, "left": 1}
                id: screen_manager
                HomeScreen:
                    name: "home_screen"
                    id: home_screen
                FindGroupScreen:
                    name: "find_group_screen"
                    id: find_group_screen
                CreateGroupScreen:
                    name: "create_group_screen"
                    id: create_group_screen
                SignInScreen:
                    name: "sign_in_screen"
                    id: sign_in_screen
                ProfileScreen:
                    name: "profile_screen"
                    id: profile_screen
                CreateAccountScreen:
                    name: "create_account_screen"
                    id: create_account_screen
                LearnGameScreen:
                    name: "learn_game_screen"
                    id: learn_game_screen
                BoardGameScreen:
                    name: "board_game_screen"
                    id:  board_game_screen
                GameGroupHostScreen:
                    name: "game_group_host_screen"
                    id: game_group_host_screen
                    
